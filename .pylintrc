[FORMAT]

# Increase certain limits that are too tight by default
max-line-length=120
max-locals=20
max-branches=20
max-args=6

# Regexp for a line that is allowed to be longer than the limit.
ignore-long-lines=\".*\"

# Allow certain single-character variable names
good-names=f,w,h,c,i,j,k,x,y,z,r,g,b,e,assertRaisesRegex,assertRaisesRegexp

# Expected format of line ending, e.g. empty (any line ending), LF or CRLF.
expected-line-ending-format=LF

# Disable warnings that are not applicable to our coding style
disable=
  consider-using-f-string,
  missing-function-docstring,
  deprecated-method,
  locally-disabled
